<mvc:View
  controllerName="restaurant00045.controller.Admin"
  xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
  xmlns="sap.m">
  <Page title="{i18n>adminTitle}" showNavButton="true" navButtonPress=".goBack">
    <content>
      <ObjectHeader title="{i18n>adminHeaderTitle}" icon="sap-icon://wrench" backgroundDesign="Solid" condensed="true">
        <ObjectAttribute text="{i18n>adminHeaderDescription}" />
      </ObjectHeader>

      <IconTabBar expanded="{device>/isNoPhone}" class="sapUiSmallMarginBottom sapUiResponsiveContentPadding">
        <items>
          <IconTabFilter key="tables" text="{i18n>adminTabsTables}" />
          <IconTabFilter key="reservations" text="{i18n>adminTabsReservations}" />
        </items>
      </IconTabBar>
    </content>
  </Page>
</mvc:View>
